#!/bin/bash -e

RANK=$(flux getattr rank)

# Usage: modrm {all|<rank>} modname
modrm() {
    local where=$1; shift
    if test "$where" = "all" || test $where -eq $RANK; then
        flux module remove -f $*
    fi
}

if [ "${TEST_UNDER_FLUX_NO_EXEC}" != "y" ]
then
    modrm 0 job-exec
fi
modrm 0 heartbeat
modrm 0 sched-simple
modrm all resource
modrm 0 job-list
modrm all job-info
modrm 0 job-manager
modrm all barrier
modrm all kvs-watch
modrm all job-ingest

modrm all kvs

flux content flush

modrm 0 content-sqlite
modrm all content
