#!/bin/bash -e

set_fake_hwloc_by_rank() {
    cores=${1}
    ranklist="0-$(($(flux getattr size) - 1))"
    corelist="0-$((${cores} - 1))"
    by_rank="{\"${ranklist}\":{\"Core\":${cores},\"coreids\":\"${corelist}\"}}"
    echo Setting fake by_rank="${by_rank}" >&2
    flux kvs put resource.hwloc.by_rank="${by_rank}"
    flux kvs eventlog append resource.eventlog \
        hwloc-discover-finish "{\"loaded\":true}"
}

rank=$(flux getattr rank)

test $rank -ne 0 || flux module load content-sqlite
flux module load kvs
flux module load kvs-watch

test $rank -ne 0 || flux module load job-manager
flux module load job-ingest

test $rank -ne 0 || flux module load job-info
flux module load barrier

# Load a fake resource.hwloc.by_rank key for sched-simple
test $rank -ne 0 || set_fake_hwloc_by_rank ${TEST_UNDER_FLUX_CORES_PER_RANK:-2}
test $rank -ne 0 || flux module load resource

test $rank -ne 0 || flux module load job-exec

test $rank -ne 0 || flux module load sched-simple

test $rank -ne 0 || flux admin cleanup-push <<-EOT
	flux queue stop --quiet
	flux job cancelall --user=all --quiet -f --states RUN
	flux queue idle --quiet
EOT
