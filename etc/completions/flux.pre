    local list_OPTS="\
        -h --help \
        -o --format= \
        -s --states= \
        -n --no-header \
        -q --queue= \
        -i --include= \
    "
    local status_OPTS="\
        ${list_OPTS} \
    "
    local R_OPTS="\
        -h --help \
        -s --states= \
        -q --queue= \
        -i --include= \
    "
    local undrain_OPTS="\
        -h --help \
    "
    local drain_OPTS="\
        -h --help \
        -f --force \
        -u --update \
        -o --format= \
        -n --no-header \
        -q --queue= \
        -i --include= \
    "

    if [[ $cmd != "resource" ]]; then
        if [[ $cur != -* ]]; then
            if [[ $cmd == "reload" ]]; then
                compopt -o filenames
            fi
        fi
        var="${cmd}_OPTS"
        COMPREPLY=( $(compgen -W "${!var}" -- "$cur") )
        if [[ "${COMPREPLY[@]}" == *= ]]; then
            # Add space if there is not a '=' in suggestions
            compopt -o nospace
        fi
        if _flux_complete_queue flux resource ${cmd}; then
            return 0
        fi
        if _flux_complete_format_name flux resource ${cmd}; then
            return 0
        fi
    else
        COMPREPLY=( $(compgen -W "${subcmds}" -- "$cur") )
    fi
    return 0
}

